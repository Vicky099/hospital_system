<section class="content-header">
  <h1>
    All Hospitals
  </h1>

</section><br/>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Hospital records</h3>

        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th>Hospital Reg No.</th>
            <th>Hospital Name</th>
            <th>Hospital Type</th>
            <th>Hospital Address</th>
            <th>Action</th>
          </tr>
          <% if @hospitals.present? %>
            <% @hospitals.each do |hospital| %>
              <tr>
                <td><%= hospital.registration_num %></td>
                <td><%= hospital.name %></td>
                <td><%= hospital.type_of_hospital %></td>
                <td><%= hospital.address %></td>
                <td><%= link_to 'View Details', hospital_path(hospital.id), class: 'btn btn-link' %>/<%= link_to 'View Medicals', hospital_medical_stores_path(hospital.id), class: 'btn btn-link' %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td>No Hospitals records available.</td><td></td><td></td><td></td><td></td>
            </tr>
          <% end %>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
