<div class="form-group">
  <%= f.label :name,class: 'col-sm-3 control-label text-red'%>
  <div class="col-sm-9">
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :registration_num, class: 'col-sm-3 control-label text-red'%>
  <div class="col-sm-9">
    <%= f.text_field :registration_num, class: 'form-control', required: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :contact_num, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_field :contact_num, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :address, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_area :address, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :landmark, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_field :landmark, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :facilities, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_field :facilities, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :no_of_beds, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_field :no_of_beds, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :working_hours, class: 'col-sm-3 control-label'%>
  <div class="col-sm-9">
    <%= f.text_area :working_hours, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.label :type_of_hospital,class: 'col-sm-3 control-label text-red' %>
  <div class="col-sm-9">
    <%= f.select(:type_of_hospital, Hospital.type_of_hospitals.keys, {prompt: 'Select Hospital type'}, {:class => 'form-control', required: true}) %>
  </div>
</div>
