<section class="content-header">
  <h1>
    Profile
  </h1>
</section><br/>
<div class="row">
  <div class="col-md-3">
    <%= render partial: 'profile_sidebar' %>
  </div>
  <!-- /.col -->
  <div class="col-md-9">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#timeline" data-toggle="tab">Personal Info</a></li>
        <li><a href="#activity" data-toggle="tab">Doctor Blog</a></li>
        <li><a href="#settings" data-toggle="tab">Hospital Info</a></li>
      </ul>
      <div class="tab-content">
        <div class="active tab-pane" id="timeline">
          <div class="post">
            <div class="form-group">
              <div class="row">
                <div class="col-md-3">
                  <b> Name :</b>
                </div>
                <div class="col-md-9">
                  <%= current_doctor.full_name %>
                </div>
              </div><br/>
              <div class="row">
                <div class="col-md-3">
                  <b> Email ID:</b>
                </div>
                <div class="col-md-9">
                  <%= current_doctor.email %>
                </div>
              </div><br/>
              <div class="row">
                <div class="col-md-3">
                  <b> Mobile No. :</b>
                </div>
                <div class="col-md-9">
                  <%= current_doctor.mobile_no %>
                </div>
              </div><br/>
              <div class="row">
                <div class="col-md-3">
                  <b> Residence Address : </b>
                </div>
                <div class="col-md-9">
                  <%= current_doctor.residence_address.to_s+" - "+current_doctor.city.to_s+" - "+current_doctor.state.to_s %>
                </div>
              </div><br/>
              <div class="row">
                <div class="col-md-3">
                  <b> Education & Specialist : </b>
                </div>
                <div class="col-md-9">
                  <%= current_doctor.education.to_s+" - "+current_doctor.specialist.to_s %>
                </div>
              </div><br/>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="activity">
          <!-- Post -->
          <div class="post">
            <div class="user-block">
              <%= image_tag current_doctor.photo_url, class: 'img-circle img-bordered-sm', alt: 'user image' %>
                  <span class="username">
                    <a href="#">Jonathan Burke Jr.</a>
                    <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
                  </span>
              <span class="description">Shared publicly - 7:30 PM today</span>
            </div>
            <!-- /.user-block -->
            <p>
              Lorem ipsum represents a long-held tradition for designers,
              typographers and the like. Some people hate it and argue for
              its demise, but others ignore the hate as they create awesome
              tools to help create filler text for everyone from bacon lovers
              to Charlie Sheen fans.
            </p>
            <ul class="list-inline">
              <li><a href="#" class="link-black text-sm"><i class="fa fa-share margin-r-5"></i> Share</a></li>
              <li><a href="#" class="link-black text-sm"><i class="fa fa-thumbs-o-up margin-r-5"></i> Like</a>
              </li>
              <li class="pull-right">
                <a href="#" class="link-black text-sm"><i class="fa fa-comments-o margin-r-5"></i> Comments
                  (5)</a></li>
            </ul>

            <input class="form-control input-sm" type="text" placeholder="Type a comment">
          </div>
          <!-- /.post -->
        </div>
        <div class="tab-pane" id="settings">
          <div class="post">
            <div class="form-group">
              <div class="row">
                  <div class="col-md-12">
                    <%= link_to "Add New Hospital", new_hospital_path, class: 'btn btn-default pull-right' %>
                  </div>
              </div>
              <% if @hospitals.present? %>
                <% @hospitals.each do |hospital| %>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Name :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.name %>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Registration Num :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.registration_num %>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Contact Num :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.contact_num %>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Address :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.address %> - <%= hospital.landmark%>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Facilities :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.facilities %>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> No. of Beds:</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.no_of_beds %>
                    </div>
                  </div><br/>
                  <div class="row">
                    <div class="col-md-3">
                      <b> Working Hours :</b>
                    </div>
                    <div class="col-md-9">
                      <%= hospital.working_hours %>
                    </div>
                  </div><br/>
                  <% if hospital.type_of_hospital.to_s == 'owner' %>
                    <div class="row">
                      <div class="col-md-3">
                        <b> Hospital Owner :</b>
                      </div>
                      <div class="col-md-9">
                        <%= current_doctor.full_name %>
                      </div>
                    </div><br/>
                  <% else %>
                    <div class="row">
                      <div class="col-md-3">
                        <b> Hospital Type :</b>
                      </div>
                      <div class="col-md-9">
                        <%= hospital.type_of_hospital %>
                      </div>
                    </div><br/>
                  <% end %>
                  <div class="row">
                    <div class="col-md-3">
                        <%= link_to 'Edit', edit_hospital_path(hospital.id), class: 'btn btn-block btn-primary btn-xs' %>
                    </div>
                  </div>
                  <hr/>
                <% end %>
              <% else %>
                <%= 'No Hospital information availble' %>
              <% end %>
            </div>
          </div>
        </div>
        <!-- /.tab-pane -->
      </div>
      <!-- /.tab-content -->
    </div>
    <!-- /.nav-tabs-custom -->
  </div>
  <!-- /.col -->
</div>
