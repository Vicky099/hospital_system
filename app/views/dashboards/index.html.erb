<section class="content-header">
  <h1>
    Dashboard
  </h1>
</section><br/>
<div class="row">
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-aqua">
      <div class="inner">
        <h3><%= total_patient_count %></h3>

        <p>Patients</p>
      </div>
      <div class="icon">
        <i class="ion ion-bag"></i>
      </div>
      <%= link_to patients_path, class: 'small-box-footer' do %>
      	More info <i class="fa fa-arrow-circle-right"></i>
      <% end %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-green">
      <div class="inner">
        <h3><%= todays_patient_count %></h3>

        <p>Today's Patients</p>
      </div>
      <div class="icon">
        <i class="ion ion-stats-bars"></i>
      </div>
      <%= link_to patients_path(today: true), class: 'small-box-footer' do %>
        More info <i class="fa fa-arrow-circle-right"></i>
      <% end %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= pending_appointment_count %></h3>

        <p>Pending Appointment</p>
      </div>
      <div class="icon">
        <i class="ion ion-person-add"></i>
      </div>
      <%= link_to patients_path(pending: true), class: 'small-box-footer' do %>
        More info <i class="fa fa-arrow-circle-right"></i>
      <% end %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-red">
      <div class="inner">
        <h3><%= todays_earning %></h3>
        <p>Today's Earning</p>
      </div>
      <div class="icon">
        <i class="ion ion-pie-graph"></i>
      </div>
      <%= link_to earning_report_dashboards_path, class: "small-box-footer" do %>
        More info <i class="fa fa-arrow-circle-right"></i>
      <% end %>
    </div>
  </div>
  <!-- ./col -->
</div>
