<section class="content-header">
  <h1>
    Medical Stores
    <%= link_to 'Add Medical Partner', new_hospital_medical_store_path, class: 'btn btn-danger pull-right' %>
  </h1>
  <small class="text-red">*You can not add more than one active medical partner. please de-activate current medical partner & then add new one.</small>
</section><br/>
<div class="row">
  <% if @medical_stores.present? %>
    <% @medical_stores.each_with_index do |medical, index| %>
      <div class="col-xs-4">
        <div class="box box-success">
          <div class="box-header">
            <h3 class="box-title">Medical Partner No. <%= index+1 %></h3>
          </div>
          <div class="box-body">
            <div class="form-group">
              <label>Medical Name.:</label>
              <span><%= medical.name %></span>
            </div>
            <div class="form-group">
              <label>Owner Name : </label>
              <span><%= medical.owner %></span>
            </div>
            <div class="form-group">
              <label>Address : </label>
              <span><%= medical.address %></span>
            </div>
            <div class="form-group">
              <label>Joined Date.: </label>
              <span><%= medical.created_at.strftime('%A, %d %B %Y') %></span>
            </div>
            <div class="form-group">
              <label>Status : </label>
              <%= status_label(medical).html_safe %>
            </div>
          </div>
          <div class="box-footer">
            <div class="col-md-6">
              <%= link_to 'View', hospital_medical_store_path(medical.hospital_id, medical.id), class: 'btn btn-sm btn-block btn-primary' %>
            </div>
            <div class="col-md-6">
             <%= link_to 'Edit', edit_hospital_medical_store_path(medical.hospital_id, medical.id), class: 'btn btn-sm btn-block btn-success' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-xs-4">
      <div class="box box-danger">
        <div class="box-header">
          <span class="text-red">No medical store records available.</span>
        </div>
      </div>
    </div>
  <% end %>
</div>
